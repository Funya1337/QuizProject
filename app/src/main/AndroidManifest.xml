<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.quizapdd">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.ImageTestActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AuthorizeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CreateTestActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AdminPanelActivity"
            android:exported="false" />
        <activity
            android:name=".activity.VideoLessonsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ScoreCardActivity"
            android:exported="false" />
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.Splashactivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.CustomUrlActivity" />
        <activity android:name=".activity.AboutDevActivity" />
        <activity
            android:name=".activity.QuizPromptActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.QuizActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@style/AppTheme" />
    </application>

</manifest>